@page "/bookdetails"
@rendermode InteractiveWebAssembly
<h3>Multiple Forms Example</h3>

<EditForm Model="@formData1" OnValidSubmit="HandleSubmit1" FormName="form1">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label for="name1" class="form-label">Name</label>
        <InputText id="name1" class="form-control" @bind-Value="formData1.Name" />
        <ValidationMessage For="@(() => formData1.Name)" />
    </div>

    <div class="mb-3">
        <label for="email1" class="form-label">Email</label>
        <InputText id="email1" class="form-control" @bind-Value="formData1.Email" />
        <ValidationMessage For="@(() => formData1.Email)" />
    </div>

    <button type="submit" class="btn btn-primary">Submit Form 1</button>
</EditForm>

@if (isSubmitted)
{
    <div class="alert alert-success mt-3">
        <p>Form Submitted: <strong>@formData1.Name</strong></p>
        <p>Email: @formData1.Email</p>
    </div>
}

@code {
    private FormData formData1 = new FormData(); // Ensure it's initialized properly
    private bool isSubmitted = false;

    // Handle form submission
    private void HandleSubmit1()
    {
        Console.WriteLine($"Name: {formData1.Name}, Email: {formData1.Email}");
        isSubmitted = true;  // After submission, set the flag to show success
    }

    // Define the data model
    public class FormData
    {
        public string Name { get; set; }
        public string Email { get; set; }
    }
}
